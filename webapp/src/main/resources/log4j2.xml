<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d [%-5p] (%F:%M:%L) %m%n" />
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="org.atmosphere" level="info" />

		<Root level="debug">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>